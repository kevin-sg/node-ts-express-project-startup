{
	"name": "node-ts-express-project-startup",
	"version": "1.0.0",
	"description": "Initialization of a pre-configured project in Node with Express",
	"main": "app.js",
	"scripts": {
		"dev": "cross-env NODE_ENV=development tsnd --clear --respawn -r tsconfig-paths/register src/app.ts",
		"build": "cross-env NODE_ENV=production rimraf ./dist && pnpm compile && pnpm post:compile",
		"start": "pnpm build && node dist/src/app.js",
		"compile": "tsc",
		"post:compile": "ef-tspm",
		"lint": "eslint src/**/*.ts",
		"format": "eslint src/**/*.ts --fix",
		"test": "cross-env NODE_ENV=test jest",
		"test:watch": "cross-env NODE_ENV=test jest --no-cache --forceExit --detectOpenHandles  --watchAll",
		"test:coverage": "cross-env NODE_ENV=test jest --coverage"
	},
	"dependencies": {
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dotenv": "^16.4.4",
		"express": "^4.18.2",
		"winston": "^3.11.0"
	},
	"devDependencies": {
		"@ef-carbon/tspm": "^2.2.5",
		"@types/compression": "^1.7.5",
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^29.5.12",
		"@types/morgan": "^1.9.9",
		"@types/node": "^20.11.19",
		"@types/supertest": "^6.0.2",
		"@typescript-eslint/eslint-plugin": "^7.0.1",
		"@typescript-eslint/parser": "^7.0.1",
		"cross-env": "^7.0.3",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^5.1.3",
		"jest": "^29.7.0",
		"morgan": "^1.10.0",
		"prettier": "^3.2.5",
		"rimraf": "^5.0.5",
		"supertest": "^6.3.4",
		"ts-jest": "^29.1.2",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.3.3"
	},
	"keywords": [
		"node",
		"express",
		"typescript",
		"testing",
		"winston",
		"logger",
		"eslint",
		"prettier",
		"cleanArchitecture"
	],
	"author": "kevin-sg",
	"license": "ISC"
}
